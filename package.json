{
  "name": "automationexercise-api-tests",
  "version": "1.0.0",
  "description": "API testing framework for AutomationExercise using TypeScript and Playwright",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:products": "playwright test tests/products.spec.ts",
    "test:brands": "playwright test tests/brands.spec.ts",
    "test:search": "playwright test tests/search.spec.ts",
    "test:auth": "playwright test tests/auth.spec.ts",
    "test:account": "playwright test tests/account.spec.ts",
    "report": "playwright show-report",
    "clean": "rm -rf test-results playwright-report allure-results allure-report",
    "perf:smoke": "k6 run k6-tests/scripts/smoke-test.js",
    "perf:load": "k6 run --out json=k6-tests/reports/load-test-results.json k6-tests/scripts/load-test.js",
    "perf:load:html": "npm run perf:load && node k6-tests/utils/generate-html-report.js",
    "perf:stress": "k6 run --out json=k6-tests/reports/stress-test-results.json k6-tests/scripts/stress-test.js",
    "perf:stress:html": "npm run perf:stress && node k6-tests/utils/generate-stress-report.js",
    "perf:demo": "npm run perf:smoke",
    "perf:clean": "rm -rf k6-tests/reports/*.json k6-tests/reports/*.html"
  },
  "keywords": [
    "api",
    "testing",
    "typescript",
    "playwright",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "dotenv": "^16.3.1",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "zod": "^4.1.12"
  }
}
